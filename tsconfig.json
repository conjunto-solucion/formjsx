{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,

    "skipLibCheck": true,
    "outDir": "./formtsx",
    "emitDeclarationOnly": false,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true
  },

  "include": ["src"],

  "exclude": ["node_modules", "formtsx"]
}